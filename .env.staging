# Staging Environment Configuration
NODE_ENV=staging

# Database - Use staging database
DATABASE_URL="postgresql://user:password@staging-db-host:5432/whatchanged_staging"
DIRECT_URL="postgresql://user:password@staging-db-host:5432/whatchanged_staging"

# Redis - Use staging Redis
REDIS_URL="redis://staging-redis-host:6379"

# Authentication - Use strong secrets in staging
JWT_SECRET="staging-jwt-secret-should-be-generated-securely"
NEXTAUTH_SECRET="staging-nextauth-secret-should-be-generated-securely"
NEXTAUTH_URL="https://staging.whatchanged.app"

# External APIs
OPENAI_API_KEY="your-staging-openai-api-key"

# Stripe - Use staging/test keys
STRIPE_PUBLIC_KEY="pk_test_staging_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_staging_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_staging_webhook_secret"

# SendGrid - Use staging configuration
SENDGRID_API_KEY="your-staging-sendgrid-api-key"
SENDGRID_FROM_EMAIL="staging@whatchanged.app"

# Twilio - Use staging configuration
TWILIO_ACCOUNT_SID="your-staging-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-staging-twilio-auth-token"
TWILIO_FROM_NUMBER="+1234567890"

# Monitoring - Use staging environment
SENTRY_DSN="your-staging-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="whatchanged-staging"
DATADOG_API_KEY="your-staging-datadog-api-key"

# Feature Flags - Enable all features for testing
ENABLE_SIGNUPS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_ALERTS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Staging Settings
LOG_LEVEL=info
CORS_ORIGINS="https://staging.whatchanged.app"

# Rate Limiting - Moderate limits
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=900000

# File Upload Limits
MAX_FILE_SIZE=5242880