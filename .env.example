# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=WhatChanged
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/whatchanged_dev"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/whatchanged_test"

# Authentication & Security
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs
STRIPE_BASIC_PRICE_ID=price_basic_monthly
STRIPE_PRO_PRICE_ID=price_pro_monthly
STRIPE_BASIC_ANNUAL_PRICE_ID=price_basic_annual
STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual

# Email Configuration (Choose one)
# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@whatchanged.app

# AWS SES
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@whatchanged.app

# SMTP (fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@whatchanged.app

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+15551234567

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Monitoring & Analytics
# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# DataDog (optional)
DATADOG_API_KEY=your-datadog-api-key
SERVICE_NAME=whatchanged
HOSTNAME=localhost

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Logging Configuration
LOG_LEVEL=info

# SEC EDGAR API Configuration
SEC_USER_AGENT="YourCompany contact@yourcompany.com"
SEC_API_BASE_URL=https://www.sec.gov/Archives/edgar
SEC_RATE_LIMIT_DELAY=100

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# External Data Sources
# Alpha Vantage (for stock prices)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Polygon.io (alternative stock data)
POLYGON_API_KEY=your-polygon-api-key

# Feature Flags
FEATURE_AI_ANALYSIS=true
FEATURE_REAL_TIME_ALERTS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_API_ACCESS=true

# Security Configuration
ALLOWED_CORS_ORIGINS=http://localhost:3000,https://yourapp.com
RATE_LIMIT_ENABLED=true
ENABLE_WEBHOOK_SIGNATURE_VERIFICATION=true

# Job Queue Configuration
JOB_CONCURRENCY=3
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Development Tools
# Enable query logging in development
ENABLE_QUERY_LOGGING=false

# Enable detailed error messages
SHOW_DETAILED_ERRORS=false

# Webhook URLs for testing
WEBHOOK_TEST_URL=https://webhook.site/your-unique-id