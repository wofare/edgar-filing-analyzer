# Production Environment Configuration
NODE_ENV=production

# Database - Production database with connection pooling
DATABASE_URL="postgresql://user:password@prod-db-host:5432/whatchanged_prod?connection_limit=30"
DIRECT_URL="postgresql://user:password@prod-db-host:5432/whatchanged_prod"

# Redis - Production Redis with clustering
REDIS_URL="redis://prod-redis-host:6379"

# Authentication - MUST use strong, randomly generated secrets
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOMLY-GENERATED-SECRET-AT-LEAST-32-CHARS"
NEXTAUTH_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOMLY-GENERATED-SECRET"
NEXTAUTH_URL="https://whatchanged.app"

# External APIs - Production keys
OPENAI_API_KEY="your-production-openai-api-key"

# Stripe - Production keys
STRIPE_PUBLIC_KEY="pk_live_your_production_stripe_public_key"
STRIPE_SECRET_KEY="sk_live_your_production_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_production_webhook_secret"

# SendGrid - Production configuration
SENDGRID_API_KEY="your-production-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@whatchanged.app"

# Twilio - Production configuration
TWILIO_ACCOUNT_SID="your-production-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-production-twilio-auth-token"
TWILIO_FROM_NUMBER="+1234567890"

# Monitoring - Production monitoring
SENTRY_DSN="your-production-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="whatchanged"
DATADOG_API_KEY="your-production-datadog-api-key"
DATADOG_APPLICATION_KEY="your-production-datadog-app-key"

# Feature Flags - Production settings
ENABLE_SIGNUPS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_ALERTS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Production Settings
LOG_LEVEL=warn
CORS_ORIGINS="https://whatchanged.app,https://www.whatchanged.app"

# Rate Limiting - Conservative production limits
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# File Upload Limits - Conservative in production
MAX_FILE_SIZE=2097152

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# Database Connection Pool
DB_CONNECTION_TIMEOUT=15000
DB_MAX_CONNECTIONS=30

# External Service Timeouts
SEC_API_TIMEOUT=15000
OPENAI_API_TIMEOUT=30000

# Backup and Maintenance
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30